<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="basePath">./reports</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss}] %-5level %logger{34} - %msg%n" />
        </Console>
        <RollingFile name="File" fileName="${basePath}/Application.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log" append="true">
            <PatternLayout pattern="[%d{HH:mm:ss}] %-5level %logger{34} - %msg%n" />
            <SizeBasedTriggeringPolicy size="50000" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="File" />
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
